{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": ["ES2020"],
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "strict": true,
        "sourceMap": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "experimentalDecorators": true
    },
    "exclude": ["./node_modules/", "./dist/", "**/*.spec.ts"]
}
